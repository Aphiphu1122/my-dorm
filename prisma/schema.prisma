generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  email        String   @unique
  phone        String
  birthday     DateTime
  address      String
  nationalId   String   @unique
  password     String
  isApproved   Boolean  @default(false)
  createdAt    DateTime @default(now())
}
